@model IEnumerable<ComicBookReader.Models.ComicBook>
@{
    ViewData["Title"] = "Список комиксов";
}

<!DOCTYPE html>

<html>
    <head>
        <title>ComicBookReader</title>
    </head>
    <body>
        <section class="content home-page">
        <a asp-action="Logout" asp-controller="Account">Выйти</a>
        <h3>Все комиксы</h3>
        <div class="search-container-content">
            <form action="/">
              <input class="input-item" type="text" placeholder="Поиск комиксов" name="search">
              <button class="search-btn" type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>
        <div class="filters">

            <div class = "filter-item">
                <p>Жанры:</p>
                <div class="checkselect">
                    <label><input type="checkbox" name="brands[]" value="1"> Драма</label>
                    <label><input type="checkbox" name="brands[]" value="2"> Фантастика</label>
                    <label><input type="checkbox" name="brands[]" value="3"> Приключения</label>
                    <label><input type="checkbox" name="brands[]" value="4"> Экшн</label>
                    <label><input type="checkbox" name="brands[]" value="5"> Детектив</label>
                    <label><input type="checkbox" name="brands[]" value="6"> Ужасы</label>
                    <label><input type="checkbox" name="brands[]" value="6"> Триллер</label>
                    <label><input type="checkbox" name="brands[]" value="6"> Трагедия</label>
                    <label><input type="checkbox" name="brands[]" value="6"> Романтика</label>
                    <label><input type="checkbox" name="brands[]" value="6"> Спорт</label>
                    <label><input type="checkbox" name="brands[]" value="6"> Психология</label>
                    <label><input type="checkbox" name="brands[]" value="6"> Повседневность</label>
                    <label><input type="checkbox" name="brands[]" value="6"> Научная фантастика</label>
                </div>
        </div>
            
            <div class = "filter-item">
                <p>Сортировка по:</p>
                <select>
                    <option>Дате выхода (по убыванию)</option>
                    <option>Дате выхода</option>
                    <option>Названию</option>
                    <option>Рейтингу</option>
                </select>
            </div>

            <div class = "filter-item">
                <p>Язык:</p>
                <select>
                    <option>Русский</option>
                    <option>Английский</option>
                    <option>Японский</option>
                </select>
            </div>
        </div>
        @foreach (var cb in Model)
        {
            <div class="comicbook-previews">
                <a asp-action="ComicPages" asp-controller="home" class="comicbook-preview">
                    <img class="img-comicbook" src="@cb.ComicBookCover" />
                    <p>@cb.ComicBookTitle</p>
                </a>
            </div>
        }
    </body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script src="/js/home.js"></script>
</html>
